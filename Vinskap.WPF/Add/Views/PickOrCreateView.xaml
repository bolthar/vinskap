<UserControl x:Class="Vinskap.WPF.Add.Views.PickOrCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <ToggleButton Height="25" VerticalAlignment="Top" Margin="0,0,5,0" Padding="3" DockPanel.Dock="Left" Click="ToggleButton_Click" >New...</ToggleButton>
        <ContentControl Content="{Binding Current.View, ValidatesOnDataErrors=True}"></ContentControl>
    </DockPanel>
</UserControl>
